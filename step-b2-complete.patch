+
+                {maxPlatforms !== null && (
+                  <p className="text-xs text-muted-foreground -mt-1">
+                    Select up to {maxPlatforms} platforms
+                  </p>
+                )}
+
+                <Button
+                  type="submit"
+                  className="w-full"
+                  size="lg"
+                  disabled={!canGenerate || isLoading}
+                >
+                  {isLoading ? (
+                    <>
+                      <LoadingSpinner size="sm" className="mr-2" />
+                      Generating...
+                    </>
+                  ) : (
+                    <>
+                      <Sparkles className="mr-2 h-4 w-4" />
